<h3>Manage blueprints
  <a class="btn btn-primary btn-xs" href="/blueprints/new">New blueprint</a></h3>
<div class="row">
  <div class="col-sm-5">
    <form class="form-inline">
      <div class="form-group">
        <label class="sr-only" for="search">Search query</label>
        <input type="search" class="form-control"
               name="search" id="search" placeholder="Search">
      </div>
    </form>
  </div>
  <div class="col-sm-7 text-right">
    <form class="form-inline">
      Filter:
      <select name="type" id="type" class="form-control">
        <option>Type</option>
      </select>
      <select name="tag" id="tag" class="form-control">
        <option>Tag</option>
      </select>
      <select name="status" id="status" class="form-control">
        <option>Status</option>
      </select>
    </form>
  </div>
</div>
<br>
<table class="table">
  <tbody>
<% if(models.length == 0) { %>
    <td class="text-center"><h4>No blueprints yet!</h4></td>
<% }
  _.each(models, function(item) { %>
  <tr>
    <td><a href="<%=item.url() %>"><%= item.attributes.title %></a></td>
    <td class="text-right">
    <% if(item.attributes.status == 'ready') { %>
      <span class="label label-success text-capitalize"><%= item.attributes.status %></span>
    <% } else { %>
      <span class="label label-warning text-capitalize"><%= item.attributes.status %></span>
    <% } %>
      <div class="btn-group btn-group-sm" role="group" aria-label="blueprint actions">
        <a class="btn btn-default" href="<%=item.url() %>/edit">Edit</a>
        <button type="button" class="btn btn-default"
                data-action="update" data-model="Blueprint"
                data-model-id="<%= item.attributes.slug %>">Update</button>
        <button type="button" class="btn btn-danger"
                data-action="delete" data-model="Blueprint"
                data-model-id="<%= item.attributes.slug %>">Delete</button>
      </div>
    </td>
  </tr>
<% }); %>
  </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="newBlueprintModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="new-blueprint" role="form" data-model="Blueprint" data-action="new">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">New Blueprint</h4>
      </div>
      <div class="modal-body">
        <div class="alert alert-danger" role="alert" style="display:none;"></div>
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" required class="form-control"
                 id="title" name="title" placeholder="Enter title">
        </div>
        <div class="form-group">
          <label for="repo_url">Repo url</label>
          <input type="text" required class="form-control"
                 id="repo_url" name="repo_url" placeholder="Enter repo url">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
      </form>
    </div>
  </div>
</div>
